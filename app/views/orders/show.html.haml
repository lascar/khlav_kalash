%p#notice= notice
%p
  %strong Quantity:
  = @order.quantity
%p
  %strong Final Price
  = Money.new(@order.quantity * ENV["UNIT_PRICE_CENTS"].to_i, ENV["CURRENCY"]).format
%p
  %strong First name:
  = @order.first_name
%p
  %strong Last name:
  = @order.last_name
%p
  %strong Country:
  = @order.country
%p
  %strong Email address:
  = @order.email_address
%p
  %strong Number:
  = @order.number
%p
  %strong Permalink:
  = @order.permalink
= link_to 'Edit', edit_order_path(@order)
|
= link_to 'Back', orders_path
